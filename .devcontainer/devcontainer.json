{
  // VSCode上のコンテナ名
  "name": "jpgg-backend",
  // コンテナ名
  "runArgs": [
    "--name",
    "jpgg-backend"
  ],
  // ビルド設定
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "/bin/bash .devcontainer/setup.sh",
  // GITマウント
  "mounts": [
    "source=C:/Users/strad/.gitconfig,target=/workspaces/jpgg-frontend/.git/.gitconfig,type=bind,consistency=cached"
  ],
  // ポートフォワード
  "forwardPorts": [
    8080
  ],
  "portsAttributes": {
    "3000": {
      "label": "GoLang", // UI に表示されるラベル
      "onAutoForward": "openPreview" // 自動プレビューを開く
    }
  }
}